BoxLayout:
    orientation: 'vertical'
    padding: '20dp'
    spacing: '20dp'

    TextInput:
        id: query_input
        hint_text: 'Question'
        multiline: False
        on_text_validate: app.search(self.text)
        size_hint_y: 0.1

    Button:
        text: 'Search'
        on_release: app.search(query_input.text)
        background_color: 0.1, 0.5, 0.6, 1
        background_normal: ''
        background_down: ''
        color: 1, 1, 1, 1
        size_hint_y: 0.1

    ScrollView:
        size_hint_y: 0.8

        Label:
            id: result_label
            text: ''
            size_hint_y: None
            height: self.texture_size[1]
            text_size: self.width, None
